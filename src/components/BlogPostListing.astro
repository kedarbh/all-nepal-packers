---
import BlogPostCard from "./BlogPostCard.astro";

const { blogPosts } = Astro.props;
---

<div class="bg-white py-12 sm:py-16">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl lg:mx-0">
      <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
        From the blog
      </h2>
      <p class="mt-5 text-lg leading-8 text-gray-600">
        Learn more about moving from our very moving blog.
      </p>
    </div>
    <div
      class="mx-auto mt-5 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16  pt-10 sm:mt-5 sm:pt-10 lg:mx-0 lg:max-w-none lg:grid-cols-3"
    >
      {blogPosts.map((post) => <BlogPostCard post={post} />)}
    </div>
  </div>
</div>
