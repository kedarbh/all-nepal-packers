---
import smartypants from "smartypants";
import siteInfo from "~/data/site-info";
import SEO from "./SEO.astro";
import Favicon from "./Favicon.astro";
import Analytics from "./Analytics.astro";
import PageJSONLD from "~/pages/_components/PageJSONLD.astro";

export type Props = {
  title?: string;
  rawTitle?: string;
  description?: string;
  image?: { src: string; alt: string };
  canonicalURL?: URL | null;
  pageType?: "website" | "article";
};

const twitterHandle = "allnepalmovers";

const {
  rawTitle,
  description = siteInfo.description,
  image = siteInfo.image,
  canonicalURL = new URL(Astro.request.url, Astro.site),
  pageType = "website",
} = Astro.props;

const title =
  rawTitle ?? [Astro.props.title, siteInfo.name].filter(Boolean).join(" | ");
const resolvedImage = {
  src: new URL(image.src, Astro.site).toString(),
  alt: image.alt,
};
---

<!-- High Priority Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width" />
<title set:html={smartypants(title, 1)} />
<meta name="generator" content={Astro.generator} />

<!-- google Analytics -->
<Analytics />

<!-- schema snippet -->
<PageJSONLD />

<!-- Low Priority Global Metadata -->
<Favicon />
<link rel="mask-icon" href="/favicon.svg" color="#8D46E7" />
<link rel="sitemap" href="/sitemap-index.xml" />

<SEO
  name={siteInfo.name}
  title={title}
  description={description}
  image={resolvedImage}
  twitter={{ handle: twitterHandle }}
  og={{ type: pageType }}
  canonicalURL={canonicalURL}
/>
