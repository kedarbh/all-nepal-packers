---
import Wrapper from "@components/ui/Wrapper.astro";
import Logo from "./Logo.astro";
import { Icon } from "astro-icon/components";

const currentYear = new Date().getFullYear();

const footerLinks = {
  services: [
    { title: "Residential Moving", href: "/services/residential-moving" },
    { title: "Commercial Moving", href: "/services/commercial-moving" },
    { title: "Local Moving", href: "/services/local-moving" },
    { title: "Long Distance Moving", href: "/services/long-distance-moving" },
    { title: "Motorbike Moving", href: "/services/motorbike-moving" },
    { title: "Packing & Unpacking", href: "/services/packing-and-unpacking" },
    { title: "Specialized Moving", href: "/services/specialized-moving" },
  ],
  company: [
    { title: "About Us", href: "/about" },
    { title: "Reviews", href: "/testimonials" },
    { title: "Blog", href: "/blog" },
    { title: "Contact Us", href: "/contact" },
  ],
  support: [
    { title: "Free Quote", href: "/free-quote" },
    { title: "Moving Tips", href: "/blog/moving-tips" },
    { title: "FAQs", href: "/faqs" },
    { title: "Sitemap", href: "/sitemap-index.xml" },
  ],
};

const socialLinks = [
  {
    name: "Facebook",
    href: "https://www.facebook.com/AllNepalPackersAndMovers",
    icon: "social/facebook",
  },
  {
    name: "Instagram",
    href: "https://www.instagram.com/allnepalpackersandmovers",
    icon: "social/instagram",
  },
  {
    name: "Twitter",
    href: "https://x.com/AllNepalMovers",
    icon: "social/twitter",
  },
  {
    name: "TikTok",
    href: "https://www.tiktok.com/@allnepalpackersandmovers",
    icon: "social/tiktok",
  },
];
---

<footer class="pt-16 pb-10">
  <Wrapper>
    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 lg:gap-8 pb-10"
    >
      <!-- Company Info -->
      <div class="space-y-6">
        <div class="bg-white p-2 rounded-lg inline-block">
          <Logo visibility="block" />
        </div>
        <p class="text-gray-400 text-sm leading-relaxed max-w-xs">
          Nepal's most trusted moving and packing service provider. We ensure
          safe, efficient, and stress-free relocation for homes and offices.
        </p>
        <div class="flex gap-4">
          {
            socialLinks.map((link) => (
              <a
                href={link.href}
                target="_blank"
                rel="noopener noreferrer"
                class="w-10 h-10 rounded-full bg-white/5 flex items-center justify-center hover:bg-primary transition-all group"
              >
                <Icon name={link.icon} class="w-5 h-5 text-white" />
              </a>
            ))
          }
        </div>
      </div>

      <!-- Services -->
      <div>
        <h3 class="text-lg font-bold mb-6 text-primary">Our Services</h3>
        <ul class="space-y-4">
          {
            footerLinks.services.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-gray-400 hover:text-primary transition-colors text-sm"
                >
                  {link.title}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h3 class="text-lg font-bold mb-6 text-primary">Company</h3>
        <ul class="space-y-4">
          {
            footerLinks.company.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-gray-400 hover:text-primary transition-colors text-sm"
                >
                  {link.title}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Contact Info -->
      <div class="space-y-6">
        <h3 class="text-lg font-bold mb-6 text-primary">Contact Us</h3>
        <ul class="space-y-4">
          <li class="flex gap-3 items-start">
            <Icon
              name="location-filled"
              class="w-5 h-5 text-primary shrink-0"
            />
            <span class="text-gray-400 text-sm">Kathmandu, Nepal</span>
          </li>
          <li>
            <a href="tel:+9779843472589" class="flex gap-3 items-center group">
              <Icon
                name="call"
                class="w-5 h-5 text-primary shrink-0 transition-transform group-hover:scale-110"
              />
              <span
                class="text-gray-400 group-hover:text-primary transition-colors text-sm font-semibold"
                >+977-9843472589</span
              >
            </a>
          </li>
          <li>
            <a
              href="mailto:info@allnepalmovers.com.np"
              class="flex gap-3 items-center group"
            >
              <Icon
                name="email-filled"
                class="w-5 h-5 text-primary shrink-0 transition-transform group-hover:scale-110"
              />
              <span
                class="text-gray-400 group-hover:text-primary transition-colors text-sm"
                >info@allnepalmovers.com.np</span
              >
            </a>
          </li>
        </ul>
        <div class="pt-4">
          <a
            href="/free-quote"
            class="btn-primary w-full text-center py-3 bg-accent hover:bg-accent/90"
          >
            Get a Free Quote
          </a>
        </div>
      </div>
    </div>

    <div class="mt-10 pt-5 border-t border-dark/10 flex flex-col md:flex-row justify-between items-center gap-4 text-xs text-gray-500">
      <p>
        &copy; {currentYear} All Nepal Packers and Movers. All rights reserved.
      </p>
      <!-- <div class="flex gap-6">
        <a href="/privacy-policy" class="hover:text-white transition-colors"
          >Privacy Policy</a
        >
        <a href="/terms-of-service" class="hover:text-white transition-colors"
          >Terms of Service</a
        >
      </div> -->
    </div>
  </Wrapper>
</footer>
