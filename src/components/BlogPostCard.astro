---
import type { CollectionEntry } from "astro:content";
interface Props {
  post: CollectionEntry<"blog">;
}
import { Image } from "astro:assets";
const { post } = Astro.props;
const { title, publishedDate, image, description } = post.data;
---

<div class="rounded overflow-hidden shadow-lg flex flex-col">
  <a href={`/blog/${post.slug}`}>
    <img
      class="w-full"
      src={image.url}
      alt={image.alt}
      loading="lazy"
      decoding="async"
    />

    <div class="px-6 py-4 mb-auto">
      <!-- <div class="mb-3">
      <a
        href="#"
        class="text-xs text-indigo-600 transition duration-500 ease-in-out"
      >
        categories
      </a>, <a
        href="#"
        class="text-xs text-indigo-600 transition duration-500 ease-in-out"
      >
        categories 2
      </a>
    </div> -->
      <h3
        class="mb-3 text-xl font-semibold leading-6 text-gray-900 group-hover:text-gray-600"
      >
        <a
          href={`/blog/${post.slug}`}
          class="font-medium text-lg inline-block hover:text-indigo-600 transition duration-500 ease-in-out mb-2"
          >{title}</a
        >
      </h3>
      <div class="flex items-center gap-x-4 text-xs">
        <time datetime={publishedDate} class="text-gray-500"
          >{publishedDate.toDateString()}</time
        >
      </div>

      <p class="mt-5 line-clamp-3 text-sm leading-6 text-gray-600">
        {description}
      </p>
    </div>
  </a>
</div>
