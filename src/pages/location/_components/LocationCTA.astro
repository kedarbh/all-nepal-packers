---
interface Props {
  location: string;
}

const { location } = Astro.props;
---

<section class="py-20">
  <div class="container mx-auto px-4 max-w-screen-xl">
    <div class="bg-primary rounded-[40px] p-8 md:p-16 relative overflow-hidden flex flex-col items-center text-center">
      <!-- Decoration -->
      <div class="absolute top-0 right-0 w-64 h-64 bg-white/10 rounded-full -translate-y-1/2 translate-x-1/3"></div>
      <div class="absolute bottom-0 left-0 w-48 h-48 bg-black/5 rounded-full translate-y-1/2 -translate-x-1/4"></div>

      <h2 class="text-3xl md:text-5xl font-extrabold text-white mb-6 relative z-10 leading-tight">
        Ready to Move in <br class="hidden md:block"/> {location}?
      </h2>
      <p class="text-white/80 text-lg mb-10 max-w-2xl relative z-10">
        Join 10,000+ happy customers who trusted All Nepal Packers and Movers for their relocation. 
        Get your free customized quote today and experience the best service in {location}.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 relative z-10">
        <a href="/free-quote" class="bg-white text-primary px-10 py-4 rounded-xl font-bold text-lg hover:bg-gray-100 transition-colors shadow-xl">
          Get Free Quote Now
        </a>
        <a href="tel:+9779843472589" class="bg-dark text-white px-10 py-4 rounded-xl font-bold text-lg hover:bg-dark/90 transition-colors shadow-xl flex items-center justify-center gap-2">
          Call 9843472589
        </a>
      </div>
    </div>
  </div>
</section>
