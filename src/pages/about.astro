---
import MainLayout from "@layouts/MainLayout.astro";
import AboutHero from "./_components/AboutHero.astro";
import AboutSection from "./_components/AboutSection.astro";
import Wrapper from "@components/ui/Wrapper.astro";
---

<MainLayout
  title="About All Nepal Packers and Movers | Trusted Moving Company Nepal"
  description="Learn about All Nepal Packers and Movers, the most trusted moving company in Nepal. We provide reliable packers and movers services, covering Kathmandu and all major cities."
  tags="Trusted moving company Nepal, about All Nepal Packers and Movers, best packers and movers in Nepal, reliable movers Kathmandu, moving agency Nepal"
>
  <AboutHero />

  <section class="pb-24 bg-white">
    <Wrapper>
      <div class="prose prose-slate prose-lg max-w-none prose-headings:text-slate-900 prose-p:text-slate-600 prose-a:text-primary hover:prose-a:text-primary-dark">
        <AboutSection />
      </div>
    </Wrapper>
  </section>
</MainLayout>
