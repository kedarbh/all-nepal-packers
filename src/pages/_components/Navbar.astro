---
import Logo from "@components/common/Logo.astro";
import { Icon } from "astro-icon/components";
import Wrapper from "@components/ui/Wrapper.astro";

const services = [
  {
    title: "Residential Moving",
    href: "/services/residential-moving",
    description: "Safe and efficient home relocation services across Nepal.",
  },
  {
    title: "Commercial Moving",
    href: "/services/commercial-moving",
    description:
      "Professional workspace moving with minimal business downtime.",
  },
  {
    title: "Local Moving",
    href: "/services/local-moving",
    description:
      "Expert relocation within Kathmandu and major Nepali cities.",
  },
  {
    title: "Long Distance",
    href: "/services/long-distance-moving",
    description: "Reliable inter-city transport to anywhere in Nepal.",
  },
  {
    title: "Motorbike Moving",
    href: "/services/motorbike-moving",
    description: "Specialized care for your valuable two-wheelers.",
  },
  {
    title: "Packing & Unpacking",
    href: "/services/packing-and-unpacking",
    description: "Premium materials and techniques for maximum safety.",
  },
];
---

<Wrapper>
  <nav
    class="flex items-center justify-between py-3 transition-all duration-300"
    aria-label="Global"
  >
    <!-- Logo -->
    <div class="flex lg:flex-1">
      <a href="/" class="-m-1.5 p-1.5 flex items-center gap-2 group transition-transform hover:scale-105">
        <Logo visibility="block" />
        <span class="sr-only">All Nepal Packers and Movers</span>
      </a>
    </div>

    <!-- Mobile menu button -->
    <div class="flex lg:hidden items-center gap-4">
      <a href="tel:+9779843472589" class="p-2 text-primary-light">
        <Icon name="call" class="w-6 h-6" />
      </a>
      <button
        id="mobileMenuBtn"
        type="button"
        class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-white lg:text-dark"
      >
        <span class="sr-only">Open main menu</span>
        <svg
          class="h-8 w-8"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
        </svg>
      </button>
    </div>

    <!-- Desktop Navigation -->
    <div class="hidden lg:flex lg:gap-x-12 items-center">
      <a
        href="/"
        class="text-sm font-bold tracking-wide  hover:text-primary-light transition-colors"
      >Home</a>

      <!-- Megamenu Trigger -->
      <div class="relative group">
        <button
          class="flex items-center gap-1.5 text-sm font-bold tracking-wide  group-hover:text-primary-light transition-colors"
        >
          Services
          <svg
            class="w-4 h-4 transition-transform group-hover:rotate-180"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2.5"
              d="M19 9l-7 7-7-7"></path>
          </svg>
        </button>

        <!-- Megamenu -->
        <div
          class="absolute top-full -left-48 w-[640px] pt-6 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 z-50 translate-y-2 group-hover:translate-y-0"
        >
          <div
            class="bg-white rounded-[2rem] shadow-[0_20px_50px_rgba(0,0,0,0.1)] border border-borderGray p-10 grid grid-cols-2 gap-8"
          >
            {
              services.map((service) => (
                <a
                  href={service.href}
                  class="group/item flex flex-col gap-2 p-4 rounded-2xl hover:bg-primary-light/5 transition-all duration-300"
                >
                  <span class="text-[15px] font-black text-dark group-hover/item:text-primary-light">
                    {service.title}
                  </span>
                  <span class="text-xs text-gray-500 leading-relaxed font-medium">
                    {service.description}
                  </span>
                </a>
              ))
            }
          </div>
        </div>
      </div>

      <a
        href="/locations"
        class="text-sm font-bold tracking-wide hover:text-primary-light transition-colors"
      >Locations</a>
      <a
        href="/blog"
        class="text-sm font-bold tracking-wide  hover:text-primary-light transition-colors"
      >Blog</a>
      <a
        href="/contact"
        class="text-sm font-bold tracking-wide  hover:text-primary-light transition-colors"
      >Contact</a>
    </div>

    <!-- Right Side Actions -->
    <div class="hidden lg:flex lg:flex-1 lg:justify-end items-center gap-6">
      <a
        href="tel:+9779843472589"
        class="text-sm font-black flex items-center gap-2 hover:text-primary-light transition-colors"
      >
        <div class="w-9 h-9 rounded-full bg-primary-light/10 flex items-center justify-center">
            <Icon name="call" class="w-4 h-4" />
        </div>
        +977-9843472589
      </a>
      <a href="/free-quote" class="btn-primary py-3 px-8 !text-xs shadow-xl shadow-primary/30">
        Get Free Quote
      </a>
    </div>
  </nav>

  <!-- Mobile Navigation Overlay (Drawer) -->
  <div
    id="mobileNavMenu"
    class="fixed inset-0 z-[300] invisible lg:hidden"
  >
    <!-- Sharp Backdrop -->
    <div
      id="mobileNavBackdrop"
      class="absolute inset-0 bg-dark/0 backdrop-blur-none transition-all duration-500 ease-in-out"
    >
    </div>

    <!-- Content Drawer -->
    <div
      id="mobileDrawer"
      class="absolute inset-y-0 right-0 w-[85%] max-w-sm bg-white shadow-2xl flex flex-col translate-x-full transition-transform duration-500 ease-out z-[301]"
    >
      <div class="p-8 flex items-center justify-between border-b border-gray-100 bg-white">
        <Logo visibility="block" />
        <button
          id="closeMobileMenu"
          class="w-12 h-12 rounded-full bg-secondary flex items-center justify-center text-dark hover:text-primary transition-all shadow-sm"
        >
          <svg class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <div class="flex-1 overflow-y-auto px-8 py-10 space-y-12">
        <nav class="space-y-10">
          <a href="/" class="block text-3xl font-black text-dark hover:text-primary transition-colors tracking-tight">Home</a>
          
          <div class="space-y-6">
            <p class="text-[11px] font-black text-primary/50 uppercase tracking-[0.3em] mb-4">Our Services</p>
            <div class="grid grid-cols-1 gap-3">
              {services.map((service) => (
                <a href={service.href} class="flex items-center gap-4 p-4 rounded-2xl bg-secondary/50 hover:bg-primary/5 transition-all text-sm font-bold text-dark group border border-transparent hover:border-primary/10">
                  <div class="w-10 h-10 rounded-xl bg-white flex items-center justify-center text-primary group-hover:scale-110 transition-transform shadow-sm">
                     <Icon name="location" class="w-5 h-5" />
                  </div>
                  {service.title}
                </a>
              ))}
            </div>
          </div>

          <div class="h-px bg-gray-100"></div>

          <div class="space-y-6">
            <a href="/locations" class="block text-xl font-bold text-dark hover:text-primary transition-colors">Locations</a>
            <a href="/blog" class="block text-xl font-bold text-dark hover:text-primary transition-colors">Latest News</a>
            <a href="/contact" class="block text-xl font-bold text-dark hover:text-primary transition-colors">Contact Us</a>
          </div>
        </nav>
      </div>

      <div class="p-8 border-t border-gray-100 bg-white space-y-4">
        <p class="text-center text-xs text-gray-400 mb-6">Need immediate assistance?</p>
        <a
          href="tel:+9779843472589"
          class="flex items-center justify-center gap-3 w-full py-4 text-primary font-black border-2 border-primary rounded-2xl hover:bg-primary hover:text-white transition-all shadow-sm"
        >
          <Icon name="call" class="w-6 h-6" />
          9843472589
        </a>
        <a
          href="/free-quote"
          class="flex items-center justify-center w-full py-4 bg-accent text-white font-black rounded-2xl shadow-xl shadow-accent/20 hover:scale-[1.02] transition-all"
        >
          Request FREE Quote
        </a>
      </div>
    </div>
  </div>
</Wrapper>

<script>
  const mobileMenuBtn = document.getElementById("mobileMenuBtn");
  const mobileNavMenu = document.getElementById("mobileNavMenu");
  const mobileDrawer = document.getElementById("mobileDrawer");
  const backdrop = document.getElementById("mobileNavBackdrop");
  const closeBtn = document.getElementById("closeMobileMenu");

  function openMenu() {
    mobileNavMenu?.classList.remove("invisible");
    setTimeout(() => {
      backdrop?.classList.remove("bg-dark/0", "backdrop-blur-none");
      backdrop?.classList.add("bg-dark/60", "backdrop-blur-sm");
      mobileDrawer?.classList.remove("translate-x-full");
    }, 10);
    document.body.style.overflow = "hidden";
  }

  function closeMenu() {
    mobileDrawer?.classList.add("translate-x-full");
    backdrop?.classList.remove("bg-dark/60", "backdrop-blur-sm");
    backdrop?.classList.add("bg-dark/0", "backdrop-blur-none");
    
    setTimeout(() => {
      mobileNavMenu?.classList.add("invisible");
    }, 500);
    document.body.style.overflow = "";
  }

  mobileMenuBtn?.addEventListener("click", openMenu);
  closeBtn?.addEventListener("click", closeMenu);
  backdrop?.addEventListener("click", closeMenu);
</script>
