---
import Logo from "@components/common/Logo.astro";
import SmallLogo from "@components/common/Logo-sm.astro";
import { Icon } from "astro-icon/components";
import Wrapper from "@components/ui/Wrapper.astro";
---

<Wrapper>
  <nav class="flex items-center justify-between py-4" aria-label="Global">
    <!-- logo -->
    <div class="flex lg:flex-1">
      <a href="/" class="-m-1.5 p-1.5">
        <span class="sr-only">All Nepal Packers and Movers</span>
        <Logo visibility="hidden" />
        <SmallLogo />
      </a>
    </div>
    <!-- call button for mobile navigation -->
    <div class="lg:hidden text-sm">
      <a
        href="tel:+977-9843472589"
        class="flex items-center px-3 py-2.5 rounded bg-indigo-600 text-white hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
      >
        <Icon name="call" class="md:hidden" />
        <span class="hidden md:inline">Call Us:</span>&nbsp;
        <span>9843472589</span>
      </a>
    </div>

    <!-- navigation elements -->

    <div id="mobileNav" class="flex lg:hidden">
      <button
        type="button"
        class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700"
      >
        <span class="sr-only">Open main menu</span>
        <svg
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
        </svg>
      </button>
    </div>
    <div class="hidden lg:flex lg:gap-x-6">
      <!-- <a href="/about" class="text-sm font-bold leading-8 text-gray-900">
        About Us</a
      > -->
      <a href="/services" class="text-sm font-bold leading-8 text-gray-900"
        >Moving Services</a
      >
      <a href="/locations" class="text-sm font-bold leading-8 text-gray-900"
        >Locations</a
      >
      <a href="/blog" class="text-sm font-bold leading-8 text-gray-900">Blog</a>
      <a href="/contact" class="text-sm font-bold leading-8 text-gray-900"
        >Contact</a
      >
    </div>

    <div class="hidden lg:flex lg:flex-1 lg:justify-end space-x-2 items-center">
      <div class="flex no-wrap items-center">
        <a
          href="/free-quote"
          class="rounded-md border border-indigo-600 bg-indigo-600 px-3 py-3 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
          >Free Quote</a
        >
      </div>
      <a
        href="tel:+977-9843472589"
        class="px-4 py-3 rounded-md border border-indigo-600 text-indigo-600 hover:bg-indigo-600 hover:text-white focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
      >
        <span>Call Us: 9843472589</span>
      </a>
    </div>

    <!-- Mobile menu, show/hide based on menu open state. -->
    <div id="mobileNavContainer" class="hidden" role="dialog" aria-modal="true">
      <!-- Background backdrop, show/hide based on slide-over state. -->
      <div class="fixed inset-0 z-50"></div>
      <div
        class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-white px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10"
      >
        <div class="flex items-center justify-between">
          <a href="/" class="-m-1.5 p-1.5">
            <span class="sr-only">All Nepal Packers and Movers</span>
            <img
              class="h-24 w-auto"
              src="/logo.svg"
              alt="logo of ALl Nepal Packers and Movers"
            />
          </a>
          <button
            id="navCloseButton"
            type="button"
            class="-m-2.5 rounded-md p-2.5 text-gray-700"
          >
            <span class="sr-only">Close menu</span>
            <svg
              class="h-6 w-6"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
        <div class="mt-6 flow-root">
          <div class="-my-6 divide-y divide-gray-500/10">
            <div class="space-y-2 py-6">
              <a
                href="/about"
                class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50"
                >About Us</a
              >
              <a
                href="/services"
                class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50"
                >Moving Services</a
              >
              <a
                href="/locations"
                class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50"
                >Locations</a
              >
              <a
                href="/blog"
                class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50"
                >Blog</a
              >
              <a
                href="/contact"
                class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50"
                >Contact</a
              >
            </div>
            <div class="py-6">
              <a
                href="tel:9843472589"
                class="text-sm font-semibold leading-6 text-gray-900"
              >
                <div class="flex space-x-3 text-sky-600">
                  <span class="text-xl font-bold">9843472589</span>
                </div>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </nav>
</Wrapper>
