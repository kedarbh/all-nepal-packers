---
import Wrapper from "@components/ui/Wrapper.astro";
import { Icon } from "astro-icon/components";

import { Image } from "astro:assets";

import { getCollection } from "astro:content";

const services = (await getCollection("services")).filter(service => service.slug !== "motorbike-moving");
---

<section class="py-24 bg-secondary/30 relative overflow-hidden" id="services">
  <Wrapper>
    <div class="max-w-3xl mb-16">
      <h2 class="text-xs font-bold text-accent uppercase tracking-widest mb-4">Our Expertise</h2>
      <h3 class="text-3xl md:text-5xl font-bold text-dark leading-tight">
        Relocation Services Tailored to <span class="text-primary-light italic">Your Needs</span>
      </h3>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map((service) => (
        <div class="group relative bg-white rounded-2xl overflow-hidden border border-borderGray transition-all duration-300 hover:shadow-lg hover:border-primary/20">
          <!-- Card Image Container -->
          <div class="relative h-64 overflow-hidden">
            <Image 
                src={service.data.coverImage.src} 
                alt={service.data.title} 
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" 
            />
            <!-- Overlay and Icon -->
            <div class="absolute inset-0 bg-gradient-to-t from-dark/80 via-dark/20 to-transparent"></div>
            <div class="absolute bottom-6 left-6 flex items-center gap-3">
                <div class="w-12 h-12 rounded-xl bg-primary flex items-center justify-center text-white shadow-lg shadow-primary/40">
                    <Icon name={service.data.icon || "star"} class="w-6 h-6" />
                </div>
                <h4 class="text-xl font-bold text-white drop-shadow-md">{service.data.title}</h4>
            </div>
          </div>

          <!-- Card Body -->
          <div class="p-8">
            <p class="text-gray-600 mb-6 leading-relaxed line-clamp-3">
              {service.data.summary}
            </p>
            <a href={`/services/${service.slug}`} class="inline-flex items-center gap-2 text-sm font-bold text-primary group-hover:gap-3 transition-all" title={`View details for ${service.data.title}`}>
              {service.data.title} Details
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
          </div>
        </div>
      ))}
    </div>

    <div class="mt-16 text-center">
        <p class="text-gray-500 mb-6">Need a custom moving solution?</p>
        <a href="/contact" class="btn-primary">
            Contact Our Experts
        </a>
    </div>
  </Wrapper>
</section>
