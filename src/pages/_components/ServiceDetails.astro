---
import Wrapper from "@components/ui/Wrapper.astro";
import { Icon } from "astro-icon/components";

import { Image } from "astro:assets";

interface ServiceItem {
  title: string;
  description: string;
}

const { 
  title, 
  items = [] as ServiceItem[], 
  image,
  imageAlt = "Service details illustration",
  trustScore = {
    badge: "Trust Score",
    title: "100% Secure Move",
    description: "Your belongings are fully insured and handled with extreme care by our experts."
  }
} = Astro.props;
---

<section class="py-24 bg-white">
  <Wrapper>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      <div>
        <h2 class="text-3xl md:text-4xl font-bold text-dark mb-8 leading-tight">
          What's Included in our <span class="text-primary-light italic">{title}</span>
        </h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
          {items.map((item: ServiceItem) => (
            <div class="flex gap-4 p-5 rounded-3xl border border-borderGray hover:border-primary-light hover:bg-primary-light/5 transition-all duration-300 group">
              <div class="shrink-0 w-12 h-12 rounded-2xl bg-primary-light/10 flex items-center justify-center text-primary-light group-hover:bg-primary-light group-hover:text-dark transition-all duration-300">
                <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <div>
                <h4 class="font-bold text-dark mb-1">{item.title}</h4>
                <p class="text-sm text-gray-500 leading-relaxed">{item.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
      
      <div class="relative">
        <div class="aspect-square rounded-[3rem] overflow-hidden shadow-2xl border-8 border-white">
          <Image 
            src={image} 
            alt={imageAlt} 
            class="w-full h-full object-cover"
          />
        </div>
        <!-- Floating card overlay -->
        <div class="absolute -bottom-8 -left-8 bg-white p-6 rounded-[2rem] shadow-2xl border border-borderGray max-w-xs hidden md:block group hover:-translate-y-2 transition-transform duration-300">
          <div class="flex items-center gap-4 mb-4">
            <div class="w-14 h-14 rounded-2xl bg-accent flex items-center justify-center text-white shadow-lg shadow-accent/20">
              <Icon name="secure" class="w-7 h-7" />
            </div>
            <div>
              <p class="text-[10px] text-gray-400 uppercase font-bold tracking-[0.2em]">{trustScore.badge}</p>
              <p class="font-bold text-dark">{trustScore.title}</p>
            </div>
          </div>
          <p class="text-sm text-gray-600 leading-relaxed">{trustScore.description}</p>
        </div>
      </div>
    </div>
  </Wrapper>
</section>
