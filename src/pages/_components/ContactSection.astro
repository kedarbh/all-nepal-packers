---
import Wrapper from "@components/ui/Wrapper.astro";
import { Icon } from "astro-icon/components";
---

<section class="pt-24 pb-12 bg-dark text-white relative overflow-hidden" id="contact">
    <!-- Decoration -->
    <div
        class="absolute -right-20 -bottom-20 w-96 h-96 bg-primary/10 rounded-full blur-3xl"
    >
    </div>
    <div
        class="absolute -left-20 top-20 w-64 h-64 bg-accent/5 rounded-full blur-3xl"
    >
    </div>

    <Wrapper>
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-start">
            <!-- Contact Info -->
            <div class="space-y-12">
                <div class="space-y-6">
                    <h2
                        class="text-xs font-bold text-accent uppercase tracking-widest"
                    >
                        Contact Us
                    </h2>
                    <h3 class="text-3xl md:text-5xl font-bold leading-tight">
                        Ready to Move? <br />
                        <span class="text-primary-light italic"
                            >Let's Get Started!</span
                        >
                    </h3>
                    <p class="text-gray-400 text-lg leading-relaxed max-w-md">
                        Fill out the form and our relocation experts will get
                        back to you within 2 hours with a customized quote.
                    </p>
                </div>

                <div class="space-y-8">
                    <div class="flex items-center gap-6 group">
                        <div
                            class="w-14 h-14 rounded-2xl bg-white/5 border border-white/10 flex items-center justify-center text-primary group-hover:bg-primary group-hover:text-white transition-all shadow-lg"
                        >
                            <Icon name="call" class="w-7 h-7" />
                        </div>
                        <div>
                            <p class="text-sm text-gray-500 mb-1">
                                Call for instant help
                            </p>
                            <a
                                href="tel:+9779843472589"
                                class="text-xl font-bold hover:text-primary transition-colors text-white"
                                >+977-9843472589</a
                            >
                        </div>
                    </div>

                    <div class="flex items-center gap-6 group">
                        <div
                            class="w-14 h-14 rounded-2xl bg-white/5 border border-white/10 flex items-center justify-center text-primary group-hover:bg-primary group-hover:text-white transition-all shadow-lg"
                        >
                            <Icon name="email-filled" class="w-7 h-7" />
                        </div>
                        <div>
                            <p class="text-sm text-gray-400 mb-1">
                                Email us at
                            </p>
                            <a
                                href="mailto:info@allnepalmovers.com.np"
                                class="text-xl font-bold hover:text-primary transition-colors text-white"
                                >info@allnepalmovers.com.np</a
                            >
                        </div>
                    </div>

                    <div class="flex items-center gap-6 group">
                        <div
                            class="w-14 h-14 rounded-2xl bg-white/5 border border-white/10 flex items-center justify-center text-primary group-hover:bg-primary group-hover:text-white transition-all shadow-lg"
                        >
                            <Icon name="location-filled" class="w-7 h-7" />
                        </div>
                        <div>
                            <p class="text-sm text-gray-400 mb-1">
                                Our Location
                            </p>
                            <p class="text-xl font-bold text-white">Kathmandu, Nepal</p>
                        </div>
                    </div>
                </div>

                <div
                    class="p-8 bg-primary/10 border border-primary/20 rounded-3xl inline-block"
                >
                    <p class="text-white font-bold mb-2">Office Hours:</p>
                    <p class="text-gray-300/70">Sun - Fri: 7:00 AM - 10:00 PM</p>
                    <p class="text-gray-300/70">Sat - 9:00 AM – 5:00 PM</p>
                </div>
            </div>

            <!-- Form Card -->
            <div
                class="bg-white rounded-3xl p-8 md:p-12 shadow-2xl relative text-dark"
            >
                <div id="contactSectionMessage" class="hidden text-sm mb-6 border p-4 rounded-xl"></div>
                <form class="space-y-6" id="quoteForm">
                    <div class="space-y-2">
                        <label
                            for="full-name"
                            class="text-xs font-bold uppercase tracking-wider text-gray-400"
                            >Full Name</label
                        >
                        <input
                            type="text"
                            name="name"
                            required
                            id="full-name"
                            autocomplete="given-name"
                            placeholder="Ram Sharma"
                            class="w-full rounded-xl border border-borderGray bg-gray-50 px-4 py-3 text-dark text-sm placeholder:text-gray-400 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition"
                        />
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="space-y-2">
                            <label
                                for="phone-number"
                                class="text-xs font-bold uppercase tracking-wider text-gray-400"
                                >Phone Number</label
                            >
                            <input
                                type="tel"
                                name="phone"
                                id="phone-number"
                                autocomplete="tel-national"
                                pattern="[0-9]{10}"
                                required
                                placeholder="98xxxxxxxx"
                                title="Mobile Number should be 10 digits"
                                class="w-full rounded-xl border border-borderGray bg-gray-50 px-4 py-3 text-dark text-sm placeholder:text-gray-400 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition"
                            />
                        </div>
                        <div class="space-y-2">
                            <label
                                for="email"
                                class="text-xs font-bold uppercase tracking-wider text-gray-400"
                                >Email Address</label
                            >
                            <input
                                id="email"
                                name="email"
                                type="email"
                                autocomplete="email"
                                required
                                placeholder="ram@example.com"
                                class="w-full rounded-xl border border-borderGray bg-gray-50 px-4 py-3 text-dark text-sm placeholder:text-gray-400 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition"
                            />
                        </div>
                    </div>

                    <div class="space-y-2">
                        <label
                            for="move-type"
                            class="text-xs font-bold uppercase tracking-wider text-gray-400"
                            >Move Type</label
                        >
                        <select
                            id="move-type"
                            name="moveType"
                            class="w-full rounded-xl border border-borderGray bg-gray-50 px-4 py-3 text-dark text-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition"
                        >
                            <option value="Apartment">Apartment / Flat</option>
                            <option value="House">House</option>
                            <option value="Office">Office</option>
                            <option value="Motorbike">Motorbike</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="space-y-2">
                            <label
                                for="from"
                                class="text-xs font-bold uppercase tracking-wider text-gray-400"
                                >Moving From</label
                            >
                            <input
                                type="text"
                                id="from"
                                name="moveFrom"
                                required
                                autocomplete="address-level2"
                                placeholder="e.g. Kathmandu"
                                class="w-full px-4 py-3 bg-gray-50 border border-borderGray rounded-xl focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-all placeholder:text-gray-400"
                            />
                        </div>
                        <div class="space-y-2">
                            <label
                                for="to"
                                class="text-xs font-bold uppercase tracking-wider text-gray-400"
                                >Moving To</label
                            >
                            <input
                                type="text"
                                id="to"
                                name="moveTo"
                                required
                                placeholder="e.g. Pokhara"
                                class="w-full px-4 py-3 bg-gray-50 border border-borderGray rounded-xl focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-all placeholder:text-gray-400"
                            />
                        </div>
                    </div>



                    <button
                        type="submit"
                        class="w-full py-4 bg-accent text-white font-bold rounded-xl shadow-lg shadow-accent/20 hover:scale-[1.02] active:scale-[0.98] transition-all text-lg"
                    >
                        Submit Request
                    </button>
                    <p
                        class="text-[10px] text-center text-gray-400 mt-4 italic"
                    >
                        * Your privacy is our priority. No spam, guaranteed.
                    </p>
                </form>
            </div>
        </div>
    </Wrapper>
</section>

<script>
    document.getElementById("quoteForm")?.addEventListener("submit", function (e) {
        e.preventDefault();
        
        const successMessage = document.getElementById("contactSectionMessage") as HTMLDivElement | null;
        if (!successMessage) return;

        successMessage.className = "text-sm mb-6 border p-4 rounded-xl block bg-gray-50 border-gray-200 text-gray-600";
        successMessage.innerHTML = "Submitting your quote request...";

        const formData = new FormData(this as HTMLFormElement);

        fetch(
            "https://script.google.com/macros/s/AKfycbz9DL93sk9jUE0_T9EvW4z53PClrruxQ5pPJx7PNnvMmHKbm1w3sXszkwlPY2QLCT1l/exec",
            { method: "POST", body: formData }
        )
            .then((res) => {
                if (!res.ok) throw new Error("Network response was not ok");
                return res.text();
            })
            .then((data) => {
                if (data.startsWith("Error:")) throw new Error(data);
                successMessage.className = "text-sm mb-6 border p-4 rounded-xl block bg-green-50 border-green-200 text-green-700";
                successMessage.innerHTML = "✓ Quote request submitted successfully! We'll get back to you shortly.";
                (document.getElementById("quoteForm") as HTMLFormElement)?.reset();
            })
            .catch((error) => {
                successMessage.className = "text-sm mb-6 border p-4 rounded-xl block bg-red-50 border-red-200 text-red-600";
                successMessage.innerHTML = "Submission failed: " + error.message;
            });
    });
</script>
