---
import Wrapper from "@components/ui/Wrapper.astro";
import CoverImage from "@assets/images/all-nepal-packers-hero.png";
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";

const features = [
  { icon: "secure", text: "Fully Insured" },
  { icon: "shooting-star", text: "Top Rated" },
  { icon: "10-plus", text: "Professional" },
];
---

<section
  class="relative overflow-hidden bg-white pt-16 lg:pt-24 pb-12 lg:pb-32"
>
  <!-- Bg decoration -->
  <div
    class="absolute top-0 right-0 -z-10 w-1/3 h-full bg-secondary/50 rounded-l-[100px] hidden lg:block"
  >
  </div>

  <Wrapper>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <!-- Content -->
      <div class="space-y-8 max-w-2xl">
        <div
          class="inline-flex items-center gap-2 px-3 py-1 bg-accent/10 border border-accent/20 rounded-full"
        >
          <span class="flex h-2 w-2 rounded-full bg-accent animate-pulse"
          ></span>
          <span class="text-xs font-bold text-accent uppercase tracking-wider"
            >Nepal's #1 Rated Movers</span
          >
        </div>

        <h1
          class="text-3xl md:text-6xl lg:text-7xl font-bold text-dark leading-[1.1]"
        >
          Moving Made <span class="text-primary-light italic">Simple</span> & <span
            class="text-accent underline decoration-4 underline-offset-8"
            >Safe</span
          >
        </h1>

        <p class="text-lg text-gray-600 leading-relaxed max-w-lg">
          Experience stress-free relocation with All Nepal Packers and Movers.
          Professional handling, expert packing, and timely delivery anywhere in
          Nepal.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 pt-4">
          <a
            href="/free-quote"
            class="btn-primary text-center flex items-center justify-center px-8 py-4 shadow-xl shadow-primary/20"
          >
            Get a Free Moving Quote
          </a>
          <a
            href="tel:+9779843472589"
            class="flex items-center justify-center gap-3 px-8 py-4 font-bold text-primary border-2 border-primary rounded-md hover:bg-primary hover:text-white transition-all"
          >
            <Icon name="call" class="w-5 h-5" />
            9843472589
          </a>
        </div>

        <div class="flex items-center gap-8 pt-6 border-t border-borderGray">
          {
            features.map((feature) => (
              <div class="flex items-center gap-2">
                <div class="w-8 h-8 rounded-full bg-success/10 flex items-center justify-center">
                  <Icon name={feature.icon} class="w-4 h-4 text-success" />
                </div>
                <span class="text-sm font-semibold text-dark">
                  {feature.text}
                </span>
              </div>
            ))
          }
        </div>
      </div>

      <!-- Image -->
      <div class="relative w-full max-w-lg mx-auto lg:max-w-none mt-12 lg:mt-0 lg:ml-auto">
        
        <!-- Image Container (Rounded Corners with Soft Shadow) -->
        <div class="relative z-10 bg-white rounded-[2rem] overflow-hidden shadow-[0_25px_50px_-12px_rgba(0,0,0,0.15)] group">
          <Image
            src={CoverImage}
            alt="Professional Packers and Movers in Nepal"
            class="w-full h-auto object-cover transform group-hover:scale-105 transition-transform duration-700 ease-out"
            width={800}
            height={600}
          />
        </div>

        <!-- Bouncing Customer Review Badge -->
        <div
          class="absolute -bottom-8 right-0 lg:-right-8 bg-white p-5 rounded-2xl shadow-[0_15px_40px_-5px_rgba(0,0,0,0.15)] border border-gray-100 flex items-center gap-4 z-20 animate-bounce"
        >
          <div class="bg-primary p-3 rounded-xl flex items-center justify-center">
            <Icon name="shooting-star" class="w-7 h-7 text-accent" />
          </div>
          <div>
            <p class="text-sm text-gray-500 font-semibold mb-1">Customer Review</p>
            <p class="text-lg font-bold text-dark leading-none">4.9 (350+ Reviews)</p>
          </div>
        </div>
      </div>
    </div>
  </Wrapper>
</section>
