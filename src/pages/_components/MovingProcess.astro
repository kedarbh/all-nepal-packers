---
import Wrapper from "@components/ui/Wrapper.astro";
import { Icon } from "astro-icon/components";

const steps = [
  {
    title: "Request Quote",
    description: "Fill out our simple form or call us for a free, no-obligation moving estimate.",
    icon: "location"
  },
  {
    title: "Schedule Move",
    description: "We'll coordinate a date and time that perfectly fits your relocation schedule.",
    icon: "10-plus"
  },
  {
    title: "Packing",
    description: "Our expert team uses premium materials to securely pack all your belongings.",
    icon: "hand-heart-fill"
  },
  {
    title: "Transportation",
    description: "Your goods are transported safely in our modern, well-maintained fleet.",
    icon: "secure"
  },
  {
    title: "Delivery",
    description: "Safe unloading and careful placement of items in your new home or office.",
    icon: "flag"
  }
];
---

<section class="py-24 bg-dark text-white relative overflow-hidden">
  <!-- Decoration -->
  <div class="absolute top-0 right-0 w-96 h-96 bg-primary/10 rounded-full blur-[120px] -z-0"></div>
  <div class="absolute bottom-0 left-0 w-72 h-72 bg-accent/5 rounded-full blur-[100px] -z-0"></div>

  <Wrapper class="relative z-10">
    <div class="text-center max-w-3xl mx-auto mb-20">
      <div class="inline-flex items-center gap-2 px-3 py-1 bg-primary-light/10 border border-primary-light/30 rounded-full mb-6">
        <span class="text-xs font-bold uppercase tracking-widest text-primary-light italic">How it Works</span>
      </div>
      <h3 class="text-4xl md:text-5xl font-bold text-white">Our <span class="text-primary-light italic">Seamless</span> Moving Process</h3>
    </div>

    <!-- Timeline Wrapper -->
    <div class="relative">
      <!-- Desktop Timeline Line -->
      <div class="absolute top-8 left-0 w-full h-0.5 bg-white/5 hidden lg:block"></div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5 gap-8 lg:gap-10 relative z-10">
        {steps.map((step, index) => (
          <div class="flex flex-col items-center text-center group">
            <div class="w-full h-full flex flex-col items-center">
              <!-- Icon/Number Circle -->
              <div class="relative mb-8 inline-block">
                <div class="w-16 h-16 rounded-2xl bg-primary-light flex items-center justify-center text-dark shadow-lg shadow-primary-light/30 transition-all duration-300 group-hover:scale-110 z-10 relative">
                  <Icon name={step.icon} class="w-8 h-8" />
                  <!-- Step Number Badge -->
                  <div class="absolute -top-3 -right-3 w-8 h-8 rounded-full bg-gray-300 text-dark flex items-center justify-center text-sm font-bold shadow-lg border-4 border-dark z-20">
                    {index + 1}
                  </div>
                </div>
              </div>

              <!-- Content -->
              <h4 class="text-xl font-bold text-white mb-4 group-hover:text-primary-light transition-colors">{step.title}</h4>
              <p class="text-sm text-gray-400 leading-relaxed">
                {step.description}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </Wrapper>
</section>
