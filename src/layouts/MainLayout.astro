---
// import { fade } from "astro:transitions";

import BaseHead, {
  type Props as HeadProps,
} from "@components/common/BaseHead.astro";
import Footer from "@components/common/Footer.astro";
import Header from "@components/common/Header.astro";

const { ...head } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead {...head} />
  </head>
  <body>
    <!-- Google Tag Manager (noscript) -->
    <noscript
      ><iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-TSHG826J"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe></noscript
    >
    <!-- End Google Tag Manager (noscript) -->
    <main>
      <Header />
      <slot />
      <Footer />
    </main>
    <script>
      const toggleMenu = document.querySelector(
        "#mobileNav"
      ) as HTMLButtonElement;
      const mobileNav = document.querySelector("#mobileNavContainer");
      const mobileNavClose = document.querySelector("#navCloseButton");

      toggleMenu.addEventListener("click", (e) => {
        e.preventDefault();
        mobileNav.className = mobileNav.className === "hidden" ? "" : "hidden";
      });
      mobileNavClose.addEventListener("click", (e) => {
        e.preventDefault();
        mobileNav.className = mobileNav.className === "hidden" ? "" : "hidden";
      });
    </script>
    <slot name="pageScript" />
  </body>
</html>
